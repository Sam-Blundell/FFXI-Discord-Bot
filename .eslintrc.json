{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-var": "error",
        "eqeqeq": [
            "error",
            "always"
        ],
        "max-depth": [
            "error",
            { "max": 4}
        ],
        "max-len": [
            "error",
            { "code": 80 }
        ]
    }
}
